{
  "name": "andrei-portfolio-11ty",
  "version": "1.0.0",
  "description": "Modernized personal portfolio using Eleventy and Sass",
  "scripts": {
    "dev": "npm-run-all --parallel sass:watch dev:eleventy",
    "dev:eleventy": "eleventy --serve",

    "build": "npm-run-all sass:build build:eleventy",
    "build:eleventy": "eleventy",

    "sass:watch": "sass src/styles/main.scss:src/assets/css/style.css --style=compressed --watch",
    "sass:build": "sass src/styles/main.scss:src/assets/css/style.css --style=compressed"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.1.2",
    "sass": "^1.94.0",
    "npm-run-all": "^4.1.5"
  },
  "main": "eleventy.js",
  "keywords": [],
  "author": "",
  "license": "ISC"
}
